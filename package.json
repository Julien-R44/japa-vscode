{
  "publisher": "jripouteau",
  "name": "japa-vscode",
  "displayName": "Japa Extension",
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "license": "MIT",
  "description": "The VSCode extension for Japa.",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.70.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Julien-R44/japa-vscode.git"
  },
  "keywords": [
    "Adonis",
    "AdonisJS",
    "Adonis.js",
    "Japa",
    "Node.js",
    "Japa",
    "Testing"
  ],
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "icon": "assets/japa.png",
  "sponsor": {
    "url": "https://github.com/sponsors/Julien-R44"
  },
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript"
  ],
  "main": "./dist/index.js",
  "contributes": {
    "commands": [
      {
        "command": "japa-vscode.invokeCmd",
        "title": "Japa: Invoke command",
        "enablement": "false"
      },
      {
        "command": "japa-vscode.runTestFile",
        "title": "Japa: Run test file"
      },
      {
        "command": "japa-vscode.runTest",
        "title": "Japa: Run test"
      }
    ],
    "keybindings": [
      {
        "command": "japa-vscode.runTest",
        "key": "ctrl+alt+t"
      },
      {
        "command": "japa-vscode.runTestFile",
        "key": "ctrl+alt+f"
      }
    ],
    "configuration": {
      "title": "Japa",
      "properties": {
        "japa.tests.watchMode": {
          "type": "boolean",
          "default": false,
          "description": "Run tests in watch mode when executed via shortcut/codelens"
        },
        "japa.tests.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Show CodeLenses above tests"
        },
        "japa.tests.npmScript": {
          "type": "string",
          "default": "test",
          "description": "The npm script to run tests"
        },
        "japa.misc.useUnixCd": {
          "type": "boolean",
          "default": false,
          "description": "Use Unix-style cd for windows terminals ( Useful when using Cygwin or Git Bash )"
        }
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup src",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "version": "npm run build",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "test:electron": "tsc -p ./ && node ./out/test/run_electron_tests.js",
    "test": "ts-node test/run_pure_tests.ts",
    "vscode:prepublish": "npm run build",
    "vscode:package": "vsce package",
    "vscode:publish": "vsce publish"
  },
  "devDependencies": {
    "@japa/assert": "^1.3.4",
    "@japa/runner": "^2.0.9",
    "@japa/spec-reporter": "^1.1.12",
    "@julr/eslint-config": "^0.3.2",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.23.0",
    "ts-node": "^10.9.1",
    "tsup": "^6.2.3",
    "typescript": "^4.8.2"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "out",
      "syntaxes",
      "test/fixtures",
      "snippets",
      "schemas"
    ],
    "extends": [
      "@julr/eslint-config-ts",
      "@julr/eslint-config-prettier"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  }
}
