{
  "publisher": "jripouteau",
  "name": "japa-vscode",
  "displayName": "Japa VSCode",
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "license": "MIT",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Julien-R44/japa-vscode.git"
  },
  "keywords": [
    "Adonis",
    "AdonisJS",
    "Adonis.js",
    "Japa",
    "Node.js",
    "Japa",
    "Testing"
  ],
  "categories": [
    "Programming Languages",
    "Formatters",
    "Snippets",
    "Other"
  ],
  "sponsor": {
    "url": "https://github.com/sponsors/Julien-R44"
  },
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript"
  ],
  "main": "./dist/index.js",
  "contributes": {
    "commands": [
      {
        "command": "japa-vscode.invokeCmd",
        "title": "Invoke command"
      }
    ],
    "configuration": {
      "title": "Japa",
      "properties": {
        "japa.misc.useUnixCd": {
          "type": "boolean",
          "default": false,
          "description": "Use Unix-style cd for windows terminals ( Useful when using Cygwin or Git Bash )"
        }
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup src",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "version": "npm run build",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "test:electron": "tsc -p ./ && node ./out/test/run_electron_tests.js",
    "test:pure": "ts-node test/run_pure_tests.ts",
    "test": "npm run test:pure",
    "build:webpack": "webpack --mode production --devtool hidden-source-map",
    "vscode:prepublish": "pnpm build:webpack",
    "vscode:package": "vsce package",
    "vscode:publish": "vsce publish"
  },
  "devDependencies": {
    "@japa/assert": "^1.3.4",
    "@japa/runner": "^2.0.9",
    "@japa/spec-reporter": "^1.1.12",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "tsup": "^6.2.3",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "out",
      "syntaxes",
      "test/fixtures",
      "snippets",
      "schemas"
    ],
    "extends": [
      "@julr/eslint-config-ts",
      "@julr/eslint-config-prettier"
    ],
    "rules": {
      "no-useless-escape": "off"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "dependencies": {
    "@julr/eslint-config": "^0.3.2"
  }
}
